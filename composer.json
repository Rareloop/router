{
    "name": "rareloop/router",
    "description": "A powerful PHP Router for PSR7 messages inspired by the Laravel API",
    "keywords": [
        "rareloop",
        "router"
    ],
    "homepage": "https://github.com/rareloop/router",
    "license": "MIT",
    "authors": [
        {
            "name": "Joe Lambert",
            "email": "joe@rareloop.com",
            "homepage": "https://rareloop.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0",
        "altorouter/altorouter": "^1.1",
        "mindplay/middleman": "^3.0.3",
        "php-di/invoker": "^2.0.0",
        "psr/container": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "spatie/macroable": "^1.0",
        "zendframework/zend-diactoros": "^1.4"
    },
    "require-dev": {
        "php-di/php-di": "^6.0.0",
        "phpunit/phpunit": "^6.0",
        "php-coveralls/php-coveralls": "^1.0",
        "mockery/mockery": "^1.3.1",
        "squizlabs/php_codesniffer": "^3.3.1"
    },
    "autoload": {
        "psr-4": {
            "Rareloop\\Router\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rareloop\\Router\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
