{
    "name": "rareloop/router",
    "description": "A powerful PHP Router for PSR7 messages inspired by the Laravel API",
    "keywords": [
        "rareloop",
        "router"
    ],
    "homepage": "https://github.com/rareloop/router",
    "license": "MIT",
    "authors": [
        {
            "name": "Joe Lambert",
            "email": "joe@rareloop.com",
            "homepage": "https://rareloop.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.3",
        "altorouter/altorouter": "^2.0.3",
        "laminas/laminas-diactoros": "^3.8.0",
        "mindplay/middleman": "^4.0.4",
        "php-di/invoker": "^2.3.6",
        "psr/container": "^2.0.2",
        "psr/http-message": "^2.0",
        "psr/http-server-middleware": "^1.0",
        "spatie/macroable": "^2.1.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.4.3",
        "php-coveralls/php-coveralls": "^2.4",
        "php-di/php-di": "^7.1.1",
        "phpunit/phpunit": "^12.5.8",
        "squizlabs/php_codesniffer": "^3.6.0"
    },
    "autoload": {
        "psr-4": {
            "Rareloop\\Router\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rareloop\\Router\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
